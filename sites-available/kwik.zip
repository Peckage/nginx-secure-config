# =============================================================================
# Kwik.zip temporary redirect to Kwik.gg
# Drop into /etc/nginx/sites-available/kwik.zip and symlink to sites-enabled
# Requires kwik.zip certificate for HTTPS redirect
# =============================================================================

# HTTP redirect
server {
    listen 80;
    listen [::]:80;
    server_name kwik.zip www.kwik.zip;
    return 301 https://kwik.gg$request_uri;
}

# HTTPS redirect (uses kwik.zip cert)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name kwik.zip www.kwik.zip;

    ssl_certificate /etc/letsencrypt/live/kwik.zip/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/kwik.zip/privkey.pem;

    return 301 https://kwik.gg$request_uri;
}
